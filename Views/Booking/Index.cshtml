@model IEnumerable<Seasharpbooking.Models.BookingModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Bokning</h1>

<p>
    <a asp-action="Create">Skapa bokning</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @*@Html.DisplayNameFor(model => model.StartDate)*@ Incheckning
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.EndDate)*@ Utcheckning
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.RoomId)*@ Rum @*Här bör vi kanske ha en länk direkt kopplat till det aktuella rummet*@
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.GuestId)*@ Gäst @*Gästens för och efternamn*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestId)
            </td>
            <td>
                @*Ändrar från Create till Edit, samt från Category till Room*@
                <a href="@Url.Action("Edit", "Booking", new { id = item.Id})"> Redigera</a> |
                <a href="@Url.Action("Delete", "Booking", new { id = item.Id})"> Ta bort</a>
            </td>
        </tr>
}
    </tbody>
</table>
